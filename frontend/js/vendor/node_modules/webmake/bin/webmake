#!/usr/bin/env node

'use strict';

var argv = require('optimist')
	.usage("Usage: $0 <input> <output>")
	.demand(2).argv
  , writeFile = require('fs').writeFile
  , webmake   = require('../lib/webmake')

  , input = argv._[0], output = argv._[1];

if (input[0] !== '/') {
	input = process.env.PWD + '/' + input;
}
if (output[0] !== '/') {
	output = process.env.PWD + '/' + output;
}

webmake(input, function (err, result) {
	if (err) {
		throw err;
	}
	writeFile(output, result, function (err) {
		if (err) {
			throw err;
		}
		console.log("...Done");
		process.exit();
	});
});
